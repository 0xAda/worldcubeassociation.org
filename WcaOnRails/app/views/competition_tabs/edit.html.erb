<% provide(:title, "Edit #{@competition_tab.name} tab") %>

<%= render layout: 'competitions/nav' do %>
  <% buttons = capture do %>
    <%= link_to icon("eye", "Go to #{@competition_tab.name} tab"),
                competition_path(@competition, anchor: @competition_tab.slug),
                target: "_blnk", class: "btn btn-info" %>
    <%= link_to icon("trash", "Delete"), competition_tab_path(@competition, @competition_tab),
                method: :delete, class: "btn btn-danger",
                data: { confirm: "Are you sure you want to delete #{@competition_tab.name} tab?" } %>
  <% end %>

  <%= render "competition_tab_form", submit_text: "Update", submit_url: competition_tab_path(@competition, @competition_tab), buttons: buttons %>
<% end %>
