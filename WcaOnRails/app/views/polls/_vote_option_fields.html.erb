<div class="nested-fields">
  <% if @poll.multiple %>
    <%= f.input :poll_option_id, label: false, class: 'form-control', collection: @poll.poll_options, as: :check_boxes, label_method: lambda { |c| md c.description }, value_method: lambda { |c| c.id }, checked: lambda { |c| @options && c.id.in?(@options) } %>
  <% else %>
    <%= f.input :poll_option_id, label: false, class: 'form-control', collection: @poll.poll_options, as: :radio_buttons, label_method: lambda { |c| md c.description }, value_method: lambda { |c| c.id } %>
  <% end %>
</div>