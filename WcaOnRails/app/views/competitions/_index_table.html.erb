<ul class="list-group">
  <li class="list-group-item"><%= title %></li>
  <% if competitions.length > 0 %>
    <% competitions.each_with_index do |competition, index| %>
      <li class="list-group-item <%= competition.is_over? ? "past" : "not-past" %>">
        <span class="badge"><%= date_range(competition.start_date, competition.end_date, separator: '-', show_year: false) %>, <%= competition.year %></span>
        <p><%= link_to competition.name, competition_path(competition) %></p>
        <p><strong><%= competition.country.name %></strong>, <%= competition.cityName %></p>
        <p><%=md(competition.venue, target_blank: true) %></p>
      </li>
    <% end %>
  <% else %>
    <li class="list-group-item">
      No competitions found!
    </li>
  <% end %>
</ul>
