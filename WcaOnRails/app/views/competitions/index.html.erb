<% provide(:title, 'Competitions') %>

<div class="container">
  <h2><%= yield(:title) %></h2>

  <div id="simple-nav" class="col-md-12">
    <% if params[:display] == "List" %>
      <ul id="lists-navigation">

        <li class="same-line"><a href="#past" class="<%= @past_competitions.length > 0 ? '' : 'disabled' %>"><span class="glyphicon glyphicon-fast-backward" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" data-container="body" title="<%= @past_competitions.length > 0 ? 'Past competitions' : 'No past competitions selected' %>"></span></a></li>

        <li class="same-line"><a href="#current" class="<%= @in_progress_competitions.length > 0 ? '' : 'disabled' %>"><span class="glyphicon glyphicon-play" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" data-container="body" title="<%= @in_progress_competitions.length > 0 ? 'Competitions in progress' : 'No competitions in progress' %>"></span></a></li>

        <li class="same-line"><a href="#upcoming" class="<%= @upcoming_competitions.length > 0 ? '' : 'disabled' %>"><span class="glyphicon glyphicon-fast-forward" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" data-container="body" title="<%= @upcoming_competitions.length > 0 ? 'Upcoming competitions' : 'No upcoming competitions selected' %>"></span></a></li>

        <li class="same-line last-one"><a href="#form">Top</a></li>
      </ul>
    <% end %>
  </div>
    <%= form_tag competitions_path, method: :get, class: "competition-select form-inline", id: "comp-query-form" do %>
      <%= render 'index_form' %>
    <% end %>

    <% if @competitions.length == 0 %>
      <div class="alert alert-warning">No competitions found.</div>
    <% else %>
      <% if params[:display] == "List" %>
        <div class="row competition-list">          
          <% if @in_progress_competitions.length > 0 %>
            <div class="col-md-12">  
              <a class="anchor" id="current"></a>
              <%= render 'index_table', competitions: @in_progress_competitions, title: "Competitions in progress" %>
            </div>
          <% end %>

          <% if @upcoming_competitions.length > 0 %>
            <div class="col-md-12">
              <a class="anchor" id="upcoming"></a>
              <%= render 'index_table', competitions: @upcoming_competitions, title: "Upcoming competitions" %>
            </div>
          <% end %>

          <% if @past_competitions.length > 0 %>
            <div class="col-md-12">
              <a class="anchor" id="past"></a>
              <%= render 'index_table', competitions: @past_competitions, title: "Past competitions" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="row competition-list">
          <div class="col-xs-12 col-md-12">
            <div id="comps-map"></div>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

<script>
// See https://github.com/cubing/worldcubeassociation.org/issues/356
function mapSize() {
  var nav = parseInt($(".navbar").outerHeight(true));
  var head = parseInt($("h2").outerHeight(true));
  var form = parseInt($(".form-group").outerHeight(true));
  var foot = parseInt($(".footer").outerHeight(true));

  var height = parseInt($(window).innerHeight());

  var map = height - nav - head - form - foot;

  $("#comps-map").height( map );
}

function affixWidth() {
  // From https://github.com/twbs/bootstrap/issues/6350#issuecomment-16069663
  // also http://stackoverflow.com/a/20301984
  // and http://stackoverflow.com/a/24908611
  var affixBase = $(".container");
  var width = affixBase.width() - parseInt(affixBase.css('padding-left')) - parseInt(affixBase.css('padding-right'));
  $("#simple-nav").width(width);
}

$(function() {
  <% if params[:display] == 'Map' %>
    var competitions = <%= @competitions.map do |c|
        {
          id: c.id,
          name: c.name,
          latitude_degrees: c.latitude_degrees,
          longitude_degrees: c.longitude_degrees,
          cityName: c.cityName,
          marker_date: c.start_date.to_formatted_s(:long),
          is_over: c.is_over?,
          url: competition_path(c)
        }
      end.to_json.html_safe %>;

    $("#comps-map").competitionsMap(competitions);

    mapSize();

    $(window).resize(function() {
      mapSize();
    });
  <% end %>

  $(".disabled").each(function() {
    $(this).removeAttr('href');
  });

  if (!isMobile()) {
    // From http://www.sitepoint.com/understanding-bootstraps-affix-scrollspy-plugins/
    $("#simple-nav").affix({
      offset: {
        top: $("#simple-nav").offset().top
      }
    });
  }

  if (isBigScreen()) {
    $('.col-md-12').addClass('wide');
  }

  if (isMediumScreen()) {
    $('.col-md-12').addClass('medium');
  }

  // Keep the navigation bar width (see above)
  affixWidth();
});

// We check for small screens and remove the affix functionality
$(window).resize(function() {
  if (isBigScreen()) {
    // From http://www.sitepoint.com/understanding-bootstraps-affix-scrollspy-plugins/
    $("#simple-nav").affix({
      offset: {
        top: $("#simple-nav").offset().top
      }
    });

    $('.col-md-12').addClass('wide').removeClass('medium');
  } else if (isMediumScreen()) {
    $("#simple-nav").affix({
      offset: {
        top: $("#simple-nav").offset().top
      }
    });

    $('.col-md-12').addClass('medium').removeClass('wide');
  } else if (isMobile()) {
    // From https://github.com/twbs/bootstrap/issues/5870
    $(window).off('.affix');
    $("#simple-nav").removeClass('affix affix-top affix-bottom').removeData("bs.affix");
    $(".col-md-12").removeClass('wide').removeClass('medium');
  }

  affixWidth();
});

$(window).scroll(function() {
  affixWidth();
});
</script>
