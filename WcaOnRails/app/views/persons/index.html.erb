<% provide(:title, t('layouts.navigation.persons')) %>

<div class="container">
  <h2><%= yield(:title) %></h2>

  <%= form_tag persons_path, remote: true, class: "form-inline", id: "persons-query-form" do %>
    <div class="form-group">
      <%= label_tag :region, t('activerecord.attributes.user.region') %>
      <%= select_tag(:region, content_tag(:option, "All", value: "all") + grouped_options_for_select(@regions, params[:region]), class: "form-control") %>
    </div>
    <div class="form-group">
      <%= label_tag :search, t('common.search') %>
      <div id="search-box">
        <div class="input-group">
          <%= content_tag :span, icon("search"), class: "input-group-addon", title: t('.name_or_wca_id'),
                                                 data: { toggle: "tooltip", placement: "top" } %>
          <%= text_field_tag :search, params[:search], class: "form-control" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
