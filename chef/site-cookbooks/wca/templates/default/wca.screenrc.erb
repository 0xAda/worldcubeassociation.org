startup_message off
vbell off
defscrollback 50000

chdir <%= @rails_root %>
screen -t run
<% if @rails_env == "development" %>
stuff "RACK_ENV=development bundle install --without production; RACK_ENV=development bundle exec unicorn -c config/unicorn.rb\012"
<% else %>
stuff "while true; do RACK_ENV=production bundle install --without none; RACK_ENV=production bundle exec rake assets:clean assets:precompile; RACK_ENV=production bundle exec unicorn -c config/unicorn.rb; sleep 5; done\012"
<% end %>

screen -t dev
