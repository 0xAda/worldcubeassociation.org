{
  "name": "wca",
  "description": "Role for wca nodes",
  "json_class": "Chef::Role",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "groups": ["admin", "sudo", "sysadmin"],
        "users": ["vagrant", "cubing"],
        "passwordless": "true"
      }
    },
    "set_fqdn": "*.worldcubeassociation.org",
    "hostname_cookbook": {
      "hostsfile_ip": "127.0.1.1"
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[apt]",
    "recipe[sudo]",
    "recipe[hostname]",
    "recipe[wca]",
    "recipe[wca::forum]",
    "recipe[wca::regulations]",
    "recipe[wca::email]",
    "recipe[wca::cronjobs]"
  ],
  "env_run_lists": {
  }
}
